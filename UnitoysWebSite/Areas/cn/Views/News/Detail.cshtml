@{
    ViewBag.Title = "新闻详情";
}
@model UnitoysWebSite.Models.UT_News
<div class="news_main">
    <div class="mbox">
        <div class="leftbox">
            <div class="p_nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "News")" @(Model.NewsType == 1 ? "class=cur" : "")>公司动态</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "News", new { type = "industry" })" @(Model.NewsType == 0 ? "class=cur" : "")>行业新闻</a>
                    </li>
                </ul>
            </div>
            <div class="news_detail">
                <div class="n_title">
                    <h3>@Model.Title</h3>
                    <span>@Model.NewsDate.ToString("yyyy-MM-dd") @Model.Publisher</span>
                </div>
                <div class="news_content">
                    @Html.Raw(Model.Content)
                </div>
                <div class="link">
                    @if (ViewBag.PrevModel != null)
                    {
                        <a href="@Url.Action("Detail", new { id = ViewBag.PrevModel.ID })">上一篇：@ViewBag.PrevModel.Title</a>
                    }
                    @if (ViewBag.NextModel != null)
                    {
                        <a href="@Url.Action("Detail", new { id = ViewBag.NextModel.ID })">下一篇：@ViewBag.NextModel.Title</a>
                    }
                </div>
            </div>
        </div>
        <div class="rightbox">
            <div class="dy_weixin">
                <h5>微信公众号订阅</h5>
                <p class="tips">第一时间获取我们的更新和新服务信息</p>
                <p class="pic"><img src="/Content/images/qrcode_weixin.png" /></p>
            </div>
            <div class="dy_email">
                <h5>邮箱订阅</h5>
                <p class="tips">第一时间获取我们的更新和新服务信息</p>
                <p class="form">
                    <input type="text" placeholder="姓名" />
                    <input type="text" placeholder="电子邮箱" />
                    <a href="#">立即订阅</a>
                </p>
            </div>
            <div class="dy_shejiao">
                <h5>社交媒体</h5>
                <p class="tips">随时咨询我们的工作人员</p>
                <p class="btnp"><a href="#" class="btn_weibo">新浪微博</a></p>
                <p class="btnp"><a href="#" class="btn_facebook">FaceBook</a></p>
            </div>
        </div>
    </div>
</div>